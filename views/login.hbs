<div class='container'>
	<h1 class='text-center my-5'>Esta en login usuarios</h1>

	<div class='row justify-content-center'>
		<div class='col-md-6'>
			<form action='/auth/login' method='post'>
				<input type='hidden' name='_csrf' value='{{csrfToken}}' />
				<input class='form-control mb-2' name='email' placeholder='Ingrese su Correo' type='text' />
				<input class='form-control mb-2' name='password' placeholder='Ingrese Password' type='password' />

				<button class='btn btn-Primary' type='submit'>Acceder</button>
			</form>
		</div>
	</div>
</div>