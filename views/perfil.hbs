<div class='container'>
	<h1 class='text-center'>{{user.userName}}</h1>
	<p class='text-center'>Edita tu perfil</p>
	<div class='my-2 text-center'>
		{{#if imagen}}
			<img class='rounded-circle' src='/img/perfiles/{{imagen}}' alt='Perfil' />
		{{else}}
			<img class='rounded-circle' src={{'/img/perfiles/11.jpg'}} alt='Perfil' />
		{{/if}}

	</div>

	<form action='/perfil?_csrf={{csrfToken}}' method='post' enctype='multipart/form-data'>
		<input type='hidden' name='_csrf' value='{{csrfToken}}' />
		<input class='form-control form-control-sm' id='formFileSm' type='file' name='myFile' />
		<button class='btn btn-dark my-3'>Cambiar IMG Perfil</button>
	</form>
</div>